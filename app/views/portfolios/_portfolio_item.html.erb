<div class="col-md-4">
    <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
        <div class="card-body">
            <p class="card-text">
            <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></span> <%= portfolio_item.subtitle %>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to  "Delete Portfolio Item",portfolio_path(portfolio_item.id), method: :delete, data: {confirm: "Are you sure?"} if logged_in?(:site_admin) %></button>
                </div>
            </div>
        </div>
    </div>
</div>



